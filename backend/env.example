# Scentinel Backend Environment Configuration
# Copy this file to .env and update with your actual values

# MongoDB Configuration
# For local MongoDB (when using Docker Compose):
# MONGODB_URI=mongodb://mongodb:27017/scentinel

# For MongoDB Atlas (replace with your actual connection string):
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourClusterName

# MongoDB Database Name
MONGODB_DATABASE=scentinel

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_SECRET_KEY=your-secret-key-here

# Application Settings
PORT=5001
HOST=0.0.0.0

# CORS Settings (for development)
FRONTEND_URL=http://localhost:3000

# Model Settings
MODEL_PATH=app/models/
PRETRAINED_MODELS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 